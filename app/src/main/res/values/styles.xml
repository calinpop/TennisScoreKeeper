<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">#c6ff00</item>
    <!-- Background color of buttons in the app -->
    <item name="colorButtonNormal">#009624</item>
    <!-- Primary theme color of the app (sets background color of app bar) -->
    <item name="colorPrimary">#81C784</item>
    
</style>

    <!-- Custom SET Views -->
    
    <style name="CustomSet">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>


    </style>

    <!-- Custom Button Views -->

    <style name="CustomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/ButtonIncrement</item>

    </style>

    <!-- Custom Set Score View -->

    <style name="CustomSetScoreView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:text">@string/StartScore</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
